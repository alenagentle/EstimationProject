<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet author="kiseleva_ev" id="create-phase-table">
        <createTable tableName="phase">
            <column name="id" type="bigint">
                <constraints primaryKey="true"/>
            </column>
            <column name="name" type="varchar"/>
            <column name="estimate" type="bigint"/>
            <column name="sort_order" type="integer"/>
            <column name="management_reserve" type="integer"/>
            <column name="bags_reserve" type="integer"/>
            <column name="qa_reserve" type="integer"/>
            <column name="risk_reserve" type="integer"/>
            <column name="estimate_role" type="bigint"/>
        </createTable>

        <createSequence sequenceName="phase_id_seq"
                        startValue="1"
                        incrementBy="1"
                        minValue="1"
                        schemaName="public"
        />

        <addForeignKeyConstraint
                baseTableName="phase"
                baseColumnNames="estimate"
                constraintName="fk_estimate_id"
                referencedTableName="estimate"
                referencedColumnNames="id"
        />

        <addForeignKeyConstraint
                baseTableName="phase"
                baseColumnNames="estimate_role"
                constraintName="fk_estimate_role"
                referencedTableName="role_dictionary"
                referencedColumnNames="id"
        />
    </changeSet>

</databaseChangeLog>