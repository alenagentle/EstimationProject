<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet author="kiseleva_ev" id="create-estimate-table">
        <createTable tableName="estimate">
            <column name="id" type="bigint">
                <constraints primaryKey="true"/>
            </column>
            <column name="name" type="varchar"/>
            <column name="create_date" type="timestamp"/>
            <column name="description" type="varchar"/>
            <column name="risk" type="integer"/>
            <column name="status" type="bigint"/>
            <column name="client" type="varchar"/>
            <column name="creator" type="varchar"/>
        </createTable>

        <createSequence sequenceName="estimate_id_seq"
                        startValue="1"
                        incrementBy="1"
                        minValue="1"
                        schemaName="public"
        />

        <addForeignKeyConstraint
                baseTableName="estimate"
                baseColumnNames="status"
                constraintName="fk_status_id"
                referencedTableName="status_dictionary"
                referencedColumnNames="id"
        />
    </changeSet>

</databaseChangeLog>